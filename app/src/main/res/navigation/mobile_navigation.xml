<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fithub.ui.home.HomeFragment"
        android:label="Feed"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_challenge"
        android:name="com.example.fithub.PostChallenge"
        android:label="Challenge"
        tools:layout="@layout/challenge_fragment" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fithub.ui.leaderboard.DashboardFragment"
        android:label="Leaderboard"
        tools:layout="@layout/fragment_leaderboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fithub.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>